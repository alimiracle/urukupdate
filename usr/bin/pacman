#!/bin/sh
if test "$1" = "-S"
then
apt-get install $2
elif test "$1" = "-Syy"
then
apt-get update
elif test "$1" = "-Sy"
then
apt-get install $1
elif test "$1" = "-Sc"
then
apt-get clean
elif test "$1" = "--Qi"
then
apt-cache show $2
elif test "$1" = "-Syu"
then
apt-get update && apt-get upgrade
elif test "$1" = "-Syyu"
then
apt-get update && apt-get upgrade
elif test "$1" = "-R"
then
apt-get remove $2
elif test "$1" = "-Rs"
then
apt-get purge $2
elif test "$1" = "-Rsc"
then
apt-get purge $2
else
echo E: Invalid operation $1
fi

